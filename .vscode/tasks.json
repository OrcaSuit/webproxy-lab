{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build tiny",
            "type": "shell",
            "command": "make",
            "args": [
                "-C", 
                "${workspaceFolder}/tiny",
                "all"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ],
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            }
        },
        {
            "label": "clean tiny",
            "type": "shell",
            "command": "make",
            "args": [
                "-C", 
                "${workspaceFolder}/tiny",
                "clean"
            ],
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            }
        }
    ]
}
